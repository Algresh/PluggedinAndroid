<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alex.pluggedin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />



    <application
        android:name="MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup"
        android:icon="@mipmap/plugicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.pluggedin.ru"
                    android:scheme="http" />
                <data
                    android:host="pluggedin.ru"
                    android:scheme="http" />
                <data
                    android:host="www.pluggedin.ru"
                    android:scheme="https" />
                <data
                    android:host="pluggedin.ru"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowArticleActivity"
            android:label="@string/title_activity_show_article"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.pluggedin.ru"
                    android:scheme="http" />
                <data
                    android:host="pluggedin.ru"
                    android:scheme="http" />
                <data
                    android:host="www.pluggedin.ru"
                    android:scheme="https" />
                <data
                    android:host="pluggedin.ru"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowImageActivity"
            android:launchMode="singleTop"
            android:theme="@style/Theme.AllBlack" />
        <activity
            android:name=".SearchResultsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.pluggedin.ru"
                    android:scheme="http" />
                <data
                    android:host="pluggedin.ru"
                    android:scheme="http" />
                <data
                    android:host="www.pluggedin.ru"
                    android:scheme="https" />
                <data
                    android:host="pluggedin.ru"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowReviewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CommentActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar"/>

        <service android:name=".services.SaveArticle" />

        <!-- [START firebase_service] -->
        <service android:name=".services.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!-- [END firebase_service] -->
        <!-- [START firebase_iid_service] -->
        <service android:name=".services.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <!-- [END firebase_iid_service] -->

        <receiver
            android:name="com.google.android.gms.analytics.CampaignTrackingReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <service android:name="com.google.android.gms.analytics.CampaignTrackingService" />

    </application>

</manifest>